#!/usr/sbin/nft -f

# Define zones
define zones = { 172.30.0.0/24, 172.30.20.0/24, 172.30.100.0/24 }

table inet filter {
    set zones {
        type ipv4_addr
        elements = { @zones }
    }

    chain input {
        type filter hook input priority 0; policy drop;

        ct state { established, related } accept

        ip saddr 172.30.0.0/24 accept
        ip saddr 172.30.20.0/24 accept
        ip saddr 172.30.100.0/24 accept
        ip saddr 0.0.0.0/0 ip daddr 172.30.20.0/24 tcp dport 80 ct state new,established accept
        ip saddr 0.0.0.0/0 ip daddr 192.168.100.253 tcp dport 22 ct state new,established accept
    }

    chain forward {
        type filter hook forward priority 0; policy drop;
        ip saddr 172.30.0.0/24 accept
        ip saddr 172.30.20.0/24 accept
        ip saddr 172.30.100.0/24 accept
    }

    chain output {
        type filter hook output priority 0; policy drop;

        ct state { established, related } accept
        ip daddr 172.30.0.0/24 accept
        ip daddr 172.30.20.0/24 accept
        ip daddr 172.30.100.0/24 tcp sport 53 ct state established accept
        ip daddr 172.30.20.10 tcp sport 80 ct state established accept
        ip daddr 8.8.8.8 udp dport 53 ct state new,established accept

        ip daddr 172.30.0.0/16 drop
    }
}